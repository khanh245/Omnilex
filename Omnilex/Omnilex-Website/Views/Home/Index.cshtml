@{
    ViewBag.Title = "Welcome";
}

<div class="row vertical-center-row text-center">
    <h1>Omnilex</h1>

    <br />

    <div class="text-center">
        <div class="input-group col-md-6 col-md-offset-3">
            <div class="input-group-btn">
                <button class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                    Languages
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">English</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">French</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Italian</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Russian</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Vietnamese</a></li>
                </ul>
            </div>

            <input type="text" class="form-control search-input" placeholder="Type a word..." autocomplete="off" name="q">

            <div class="input-group-btn">
                <a class="btn btn-success btn-search btn-primary">
                    Lookup
                </a>
            </div>
        </div>
    </div>
</div>