@{
    ViewBag.Title = "Welcome";
}

<div class="jumbotron">
    <h1>Omnilex</h1>
    <p class="lead">Omnilex is a free online dictionary for everyone.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="input-group col-md-6 col-md-offset-3">
            <input type="text" class="form-control search-input" placeholder="Type a word..." autocomplete="off" name="q">
            <div class="input-group-btn">
                <button class="btn btn-success btn-primary" type="submit">
                    Lookup
                </button>
            </div>
        </div>
    </div>
</div>

